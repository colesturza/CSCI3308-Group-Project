
@{
    ViewBag.Title = "CreatePost";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}



<div id="enterInfo" class="container">
    
    <h2>Create Post</h2>
    
    <div class="form-group">
        <label for="title">Title:</label>
        <textarea type="text" class="form-control" ref="inputTitle" rows="1" maxlength="40"></textarea>
    </div>
    <div class="form-group">
        <label for="content">Content:</label>
        <textarea type="text" class="form-control rounded-0" ref="inputContent" rows="10" maxlength="500"></textarea>
    </div>
    <div class="form-check form-check-inline">
        <input type="checkbox" class="form-check-input" ref="inputMakePrivate">
        <label class="form-check-label" for="public">Make This Post Private</label>
    </div>
    <p></p>
    <div class="form-check form-check-inline">
        <input type="checkbox" class="form-check-input" ref="inputCanComment" checked>
        <label class="form-check-label" for="comment">Enable Comments</label>
    </div>
    <p></p>
    <button id="btn_CreatePost" v-on:click="readRefs(); sendData();">Submit</button>
</div>


@section scripts
{
    @Scripts.Render("~/resources/schoolClub/createScript")
}