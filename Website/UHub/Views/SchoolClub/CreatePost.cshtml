
@{
    ViewBag.Title = "CreatePost";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<h2>CreatePost</h2>

<div id="createPostText" class="container-fullwidth">
    <div class="jumbotron">
        <h1 class="display-4" align="center">Create a post</h1>
    </div>
</div>

<div id="enterInfo" class="container">
    <div class="form-group">
        <label for="title">Title:</label>
        <textarea type="text" class="form-control" ref="title" rows="1" maxlength="100"></textarea>
    </div>
    <div class="form-group">
        <label for="content">Content:</label>
        <textarea type="text" class="form-control rounded-0" ref="content" rows="10" maxlength="2000"></textarea>
    </div>
    <div class="form-check form-check-inline">
        <input type="checkbox" class="form-check-input" ref="public">
        <label class="form-check-label" for="public">private</label>
    </div>
    <div class="form-check form-check-inline">
        <input type="checkbox" class="form-check-input" ref="comment">
        <label class="form-check-label" for="comment">enable comments</label>
    </div>
    <button v-on:click="readRefs">Submit</button>
</div>

<script src="postVue.js"></script>
@section scripts
{
    @Scripts.Render("~/clientresources/schoolClubs/scripts/postVue.js")
}