
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}


@section header
{
    <div id="postbar-uhub">
        <postbar-component></postbar-component>
    </div>
}



<div id="body-content" class="container mt-4" style="display:none !important">
    <ul id="post-list" class="list-group list-group-flush w-70 float-md-left">
        <postlistcomp v-for="post in posts" v-bind:post="post" v-bind:key="post.ID"></postlistcomp>
    </ul>
    <div id="community-block" class="border bg-white p-3 float-md-right">
        <h5 class="mx-auto d-flex text-center justify-content-center">{{ community.Name }}</h5>
        <div class="container text-center">
            <span class="justify-content-center">
                {{ community.Description }}
            </span>
        </div>
    </div>
</div>

@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/showdown/1.9.0/showdown.min.js"></script>
    @Scripts.Render("~/resources/schoolClub/indexScript")
    @Scripts.Render("~/resources/scripts/postBar")
}