@model UHub.CoreLib.Entities.Users.DTOs.User_CredentialDTO
@using UHub.CoreLib.Extensions

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>


@{
    Html.BeginForm();
}


@Html.LabelFor(x => x.Email)
@Html.TextBoxFor(x => x.Email, new { @class = "CSS_CLASS" })
<br />
@Html.ValidationMessageFor(x => x.Email)
@{Html.ValidateFor(x => x.Email);}
<p></p>


@Html.LabelFor(x => x.Password)
@Html.PasswordFor(x => x.Password)
<br />
@Html.ValidationMessageFor(x => x.Password)
@{Html.ValidateFor(x => x.Password);}


@{
    if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMsg))
    {
        <p></p>
        <label>@ViewBag.ErrorMsg</label>
    }
}


<p></p>
@{
    Html.RenderPartial("~/Views/Security/RecaptchaPartial.cshtml");
}

<p></p>
OR
@Html.RouteLink("Create Account", new RouteValueDictionary {
    ["controller"] = "Account",
    ["action"] = "Create"
})


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

@{
    Html.EndForm();
}